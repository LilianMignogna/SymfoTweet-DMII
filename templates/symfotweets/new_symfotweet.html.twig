{% extends 'base.html.twig' %}

{% block title %}Nouveau Symfotweet{% endblock %}

{% block body %}
    <div class="card p-5 col-6 mx-auto">
        <h1>Poster un SymfoTweet</h1>
        {{ form_start(form) }}
            <div class="form-group mb-2">
                {{ form_row(form.text, {
                    label: 'Texte',
                    attr: {'class': 'form-control'}
                })  }}
            </div>
            <div class="d-flex justify-content-center mt-5">
                <button type="submit" class="btn btn-primary">Poster</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
